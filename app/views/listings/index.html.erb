<% if @vendor.blank? %>
<!-- <div class="row"> -->
   <div class="col-md-12">
<div id="featured_vendor">
<%= link_to image_tag("oc.jpg", :alt => "Slide1", size: "850x350"), {:class => "img-responsive", :alt => "Responsive image"} %>
<div id="shop_now">
<p><%= link_to "Shop Now", vendor_listings_path(:vendor_id => '3'), {:class => "btn btn-default"} %></p>
</div>
</div>
</div>

</div>
</div>
<% end %>

<div class="center">
  <div id="vendor-info">
  <div class="row">
  <div class="col-md-6">
  <% unless @vendor.blank? %>
    <%= image_tag @vendor.cover_image %>
  <% end %>
</div>
  <div class="col-md-6">
      <% unless @vendor.blank? %>
    <%= @vendor.name %>
    <%= @vendor.bio %>
  <% end %>
  </div>
</div>
</div>


<div class="row">
  <% if @vendor.blank? then @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>

      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= link_to listing.user.name, vendor_listings_path(:vendor_id => listing.user.to_param) %></p>
        <p><%= number_to_currency(listing.price, :unit => "£") %></p>
      </div>
    </div>       
    </div>
  <% end %>
</div>
</div>
<% end %>


<div class="row">
  <% if @vendor.present? then @vendor.listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>

      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= link_to listing.user.name, vendor_listings_path(:vendor_id => listing.user.to_param) %></p>
        <p><%= number_to_currency(listing.price, :unit => "£") %></p>
      </div>
    </div>       
    </div>
    <% end %>
  <% end %>
</div>
</div>



